<!DOCTYPE html>
<html>
  <head>
    <title>StudentsCompaniesTestApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <nav class='navbar navbar-expand-lg navbar-light bg-light'>
      <div class='container'>
        <div class='navbar-collapse collapse navbar-responsive-collapse w-100 order-1'>
          <ul class='nav navbar-nav mr-auto'>
            <% if current_user.present? %>
              <li class='nav-item'><%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link'  %></li>
            <% else %>
              <li class='nav-item'><%= link_to 'Sign In', new_user_session_path, class: 'nav-link'  %></li>
              <li class='nav-item'><%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link'  %></li>
            <% end %>
          </ul>
        </div>       
        <% if current_user.present? %>
          <div class='navbar-collapse collapse navbar-responsive-collapse w-100 order-2'>
            <ul class='nav navbar-nav mr-auto'>
              <li class='nav-item'><%= link_to 'Home', home_index_path, class: 'nav-link'  %></li>
            </ul>
          </div>
          <div class='navbar-collapse collapse navbar-responsive-collapse w-100 order-3'>
            <ul class='nav navbar-nav ml-auto'>
              <li class='nav-item username'><%= link_to current_user_name, edit_user_registration_path, class: 'nav-link' %></li>
              <li class='nav-item'><%= image_tag(current_user.avatar_url(:thumb).to_s) %></li>
            </ul>
          </div>
        <% end %>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
