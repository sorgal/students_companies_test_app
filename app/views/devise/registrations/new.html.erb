<div class="col-lg-9">
  <section class='jumbotron text-center'>
    <div class='container'>
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-horizontal') do |f| %>
        <%= render 'devise/shared/error_messages', resource: resource %>

        <div class='form-group'>
          <%= f.label :email, class: 'control-label label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= f.label :password, class: 'control-label label' do %>
            <%= User.human_attribute_name(:password) %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          <% end %>
          <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= f.label :password_confirmation, class: 'control-label label' %>
          <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= f.label :first_name, class: 'control-label label' %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: 'first_name', class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= f.label :last_name, class: 'control-label label' %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: 'last_name', class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= f.label :role, class: 'control-label label' %>
          <%= f.select :role, User.roles.keys.map { |role| [role.camelcase, role] }, {}, { class: 'form-control' } %>
        </div>
        <div class='form-group'>
          <%= f.submit 'Sign up', class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render 'devise/shared/links' %>
    </div>
  </section>
</div>
